---
import ProjectCard from "./ProjectCard.astro";
import { getLocaleUI } from "../multilang";

interface Props {
    title_id: string;
    description_id: string;
}

const { title_id, description_id } = Astro.props;
---

<div class="flex flex-col items-center min-h-screen py-16 px-4">
    <div class="w-full max-w-7xl">
        <div class="text-center mb-24">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">
                {getLocaleUI(title_id)}
            </h1>
            <p class="text-xl md:text-2xl italic">
                {getLocaleUI(description_id)}
            </p>
        </div>

        <div class="space-y-8">
            <slot />
        </div>
    </div>
</div>
