---
interface Props {
    title: string;
    link: string;
    imageUrl?: string;
}

const { title, link, imageUrl } = Astro.props;
---

<a href={link} class="block">
    <div class="bg-[#D9D9D9] rounded-xl overflow-hidden clip-top-round">
        <div class="w-full h-[360px]">
            <img
                src={imageUrl || "/placeholder.png"}
                alt=""
                class="w-full h-full object-cover"
                width="480"
                height="360"
            />
        </div>
        <div class="p-4">
            <h3 class="text-black font-bold text-xl text-center">{title}</h3>
        </div>
    </div>
</a>
