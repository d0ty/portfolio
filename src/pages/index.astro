---
import Layout from "../layouts/Layout.astro";
import CardOfInterest from "../components/CardOfInterest.astro";
---

<Layout title="DOTY'S SITE" menuHidden={true}>
    <div
        class="flex flex-col items-center justify-center min-h-screen text-center px-4"
    >
        <h1
            class="text-4xl md:text-6xl font-bold mb-16 flex max-sm:flex-col sm:flex-row sm:justify-center"
            id="whats_that"
        >
            <span class="sm:pr-4">OOH, </span>
            <span>WHAT'S THAT?</span>
        </h1>

        <div class="relative w-32 h-32 md:w-48 md:h-48 mb-16" id="dot">
            <div class="w-full h-full bg-white rounded-full"></div>
        </div>

        <div class="space-y-8">
            <h2
                class="text-3xl md:text-5xl font-bold flex max-sm:flex-col sm:flex-row sm:justify-center"
                id="that_is"
            >
                <span class="sm:pr-4">THAT'S JUST</span>
                <span>A LITTLE DOT</span>
            </h2>
            <div
                class="text-xl md:text-2xl mx-auto flex flex-col items-center"
                id="navbar-toggle"
            >
                <p id="loves-comp">THAT LOVES COMPUTERS AND</p>
                <p id="help-others">HELPING OTHERS AROUND ITSELF</p>
            </div>
        </div>
    </div>

    <!-- Introduction Section with large spacing -->
    <div
        class="min-h-screen flex flex-col items-center justify-center text-center px-4 py-42"
    >
        <div class="max-w-4xl mx-auto space-y-28">
            <!-- Bible Quote -->
            <div class="space-y-4 font-[Lato]">
                <p class="text-3xl md:text-5xl italic font-light">
                    Beloved,<br />
                    now we are children of God;<br />
                    and it has not yet been revealed<br />
                    what we shall be.
                </p>
                <p class="text-3xl font-bold">1 John 3,2</p>
            </div>

            <!-- Personal Introduction -->
            <div class="space-y-12">
                <h2 class="text-4xl md:text-5xl font-bold">Hi!</h2>

                <div class="space-y-8 text-lg md:text-xl">
                    <p>
                        I'm Doty, a student who loves doing a bunch of different
                        stuff:<br />
                        scouting, programming, taking photographs, editing videos,
                        running websites,<br />
                        putting together the sound of concerts and festivals, hiking,
                        travelling, and<br />
                        much more.
                    </p>

                    <div>
                        <p>
                            But above all:<br />
                            <span class="font-bold text-xl md:text-2xl my-4">
                                I want to make this world a better place
                            </span><br />
                            and I believe, the best way to achieve this, is to serve
                            others:<br />
                            both individuals and communities.<br />
                            And the more you know, the more you can help.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards Section -->
    <div
        class="min-h-screen flex flex-col items-center justify-center px-4 py-32"
    >
        <div class="w-[80%] max-w-7xl mx-auto">
            <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">
                SOME DETAILS
            </h2>

            <div class="relative">
                <!-- Navigation Arrows -->
                <button
                    class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-12 w-10 h-10 bg-white rounded-full flex items-center justify-center text-black hover:opacity-70 transition-opacity"
                    aria-label="Previous slide"
                    id="prev"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="w-6 h-6"
                    >
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                </button>

                <!-- Cards Container -->
                <div
                    class="grid max-md:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 overflow-hidden"
                >
                    <div id="card-1" class="card">
                        <CardOfInterest
                            title="CARD 1"
                            content="Some content that I would share about myself in the topic. It should be maximum 10 sentences long, because I want to give some context and some insight about my relationship with the topic, but I don't want to make it to long. A picture would be nice too."
                            link="/card1"
                        />
                    </div>
                    <div id="card-2" class="card">
                        <CardOfInterest
                            title="CARD 2"
                            content="Some content that I would share about myself in the topic. It should be maximum 10 sentences long, because I want to give some context and some insight about my relationship with the topic, but I don't want to make it to long. A picture would be nice too."
                            link="/card2"
                        />
                    </div>
                    <div id="card-3" class="card">
                        <CardOfInterest
                            title="CARD 3"
                            content="Some content that I would share about myself in the topic. It should be maximum 10 sentences long, because I want to give some context and some insight about my relationship with the topic, but I don't want to make it to long. A picture would be nice too."
                            link="/card3"
                        />
                    </div>
                </div>

                <button
                    class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-12 w-10 h-10 bg-white rounded-full flex items-center justify-center text-black hover:opacity-70 transition-opacity"
                    aria-label="Next slide"
                    id="next"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="w-6 h-6"
                    >
                        <path d="m9 18 6-6-6-6"></path>
                    </svg>
                </button>

                <!-- Dots -->
                <div class="flex justify-center gap-2 mt-8" id="dots"></div>
            </div>
        </div>
    </div>
</Layout>

<script lang="javascript">
    const navbar = document.querySelector("#navbar");

    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (!entry.isIntersecting) {
                navbar.classList.remove("opacity-0");
                navbar.classList.add("opacity-100");
            } else {
                navbar.classList.add("opacity-0");
                navbar.classList.remove("opacity-100");
            }
        });
    });

    observer.observe(document.querySelector("#navbar-toggle"));

    const cardNumber = 3;
    let displayedCards = 3;
    let currentPage = 0;

    function generateCardNav() {
        const cards = document.querySelectorAll(".card");
        const dots = document.querySelector("#dots");

        dots.innerHTML = "";

        for (let i = 0; i < Math.round(cardNumber / displayedCards); i++) {
            const dot = document.createElement("div");
            dot.id = `dot-${i}`;
            dot.classList.add(
                "w-2",
                "h-2",
                "rounded-full",
                `bg-${i === currentPage ? "[#00A3FF]" : "white"}`,
            );
            dots.appendChild(dot);
        }
    }

    function displayCards() {
        const cards = document.querySelectorAll(".card");
        cards.forEach((card, index) => {
            if (
                index >= currentPage * displayedCards &&
                index < (currentPage + 1) * displayedCards
            ) {
                card.classList.remove("hidden");
            } else {
                card.classList.add("hidden");
            }
        });
    }

    document.getElementById("prev").addEventListener("click", (_) => {
        if (currentPage > 0) {
            currentPage--;
            generateCardNav();
            displayCards();
        }
    });

    document.getElementById("next").addEventListener("click", (_) => {
        if (currentPage < Math.round(cardNumber / displayedCards) - 1) {
            currentPage++;
            generateCardNav();
            displayCards();
        }
    });

    const size_content = (_) => {
        let width = window.innerWidth;
        if (width < 768) {
            // under md => single item
            document.querySelector("#card-2").classList.add("hidden");
            document.querySelector("#card-3").classList.add("hidden");
            displayedCards = 1;
        } else if (width < 1024) {
            // under lg => two items
            document.querySelector("#card-2").classList.remove("hidden");
            document.querySelector("#card-3").classList.add("hidden");
            displayedCards = 2;
        } else {
            // three items
            document.querySelector("#card-3").classList.remove("hidden");
            displayedCards = 3;
        }
        generateCardNav();
    };
    window.addEventListener("resize", size_content);
    document.addEventListener("DOMContentLoaded", size_content);
</script>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    #dot {
        animation: fadeIn 1s ease-in-out;
    }

    #whats_that,
    #that_is,
    #loves-comp,
    #help-others {
        @apply relative w-[max-content] before:absolute;
        content: var(--tw-content);
        overflow: hidden;
        white-space: nowrap;
        width: 0;
        animation: typing 2.5s steps(50) 1s 1 normal forwards;
    }

    #that_is {
        animation-delay: 4s;
    }

    #loves-comp {
        animation-delay: 6s;
    }
    #help-others {
        animation-delay: 7s;
    }
</style>
